---
const { title, descricao, Imagem } = Astro.props;
---

<div
  class="flex h-[20.813rem] items-center justify-between gap-4 rounded-2xl bg-[#1B1C67]/60 p-6 font-sans shadow-md transition-all duration-300 hover:-translate-y-1 hover:bg-[#1B1C67]/95 hover:shadow-xl"
>
  <div class="bg-opacity-100 flex flex-col gap-6">
    <h2 class="text-2xl font-bold text-white">{title}</h2>
    <span class="text-justify text-white">{descricao}</span>
  </div>
  <Imagem class="mx-auto h-1/2 w-1/2 flex-shrink-0 object-contain" />
</div>
