{
  "extends": "astro/tsconfigs/strictest",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/components/*"],
      "@assets/*": ["./src/assets/*"],
      "@/*": ["./src/*"],
      "@kv": ["./src/kv"]
    }
  }
}
